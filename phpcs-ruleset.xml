<?xml version="1.0"?>
<ruleset name="Jetpakk">
    <file>./src/</file>
    <arg name="extensions" value="php" />
    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength.TooLong"/>
        <exclude-pattern>*.js</exclude-pattern>
    </rule>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax" />
</ruleset>
